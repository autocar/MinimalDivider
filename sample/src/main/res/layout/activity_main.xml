<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:minimaldivider="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="space.darkowlzz.sectiondividerview.MainActivity">

    <space.darkowlzz.minimaldivider.MinimalDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        minimaldivider:dividerLine_color="@android:color/holo_orange_dark"/>

    <space.darkowlzz.minimaldivider.MinimalDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        minimaldivider:dividerLine_color="@android:color/holo_green_dark"
        minimaldivider:topText_enabled="true"
        minimaldivider:topText_value="Yin"
        minimaldivider:topText_style="@android:style/TextAppearance.Large"
        minimaldivider:bottomText_enabled="true"
        minimaldivider:bottomText_value="Yang"
        minimaldivider:bottomText_style="@android:style/TextAppearance.Small"
        minimaldivider:topImage_enabled="true"
        minimaldivider:topImage_source="@drawable/ic_sun"
        minimaldivider:topImage_width="35dp"
        minimaldivider:topImage_height="35dp"
        minimaldivider:bottomImage_enabled="true"
        minimaldivider:bottomImage_source="@drawable/ic_moon"
        minimaldivider:bottomImage_width="35dp"
        minimaldivider:bottomImage_height="35dp"/>

    <space.darkowlzz.minimaldivider.MinimalDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        minimaldivider:topText_enabled="true"
        minimaldivider:bottomText_enabled="true"
        minimaldivider:topText_value="Sun"
        minimaldivider:topText_size="10dp"
        minimaldivider:bottomText_value="Moon"
        minimaldivider:bottomText_size="4dp"
        minimaldivider:dividerLine_width="220dp"/>

    <space.darkowlzz.minimaldivider.MinimalDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        minimaldivider:dividerLine_color="#F48024"
        minimaldivider:topText_enabled="true"
        minimaldivider:bottomText_enabled="true"
        minimaldivider:topText_value="Above"
        minimaldivider:topText_color="@android:color/holo_red_dark"
        minimaldivider:bottomText_value="Below"
        minimaldivider:bottomText_color="@android:color/holo_blue_light"
        minimaldivider:dividerLine_width="100dp"
        minimaldivider:dividerLine_height="10dp"
        minimaldivider:dividerLine_marginTop="30dp"
        minimaldivider:dividerLine_marginBottom="30dp"/>

    <space.darkowlzz.minimaldivider.MinimalDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@android:color/holo_purple"
        minimaldivider:dividerLine_color="@android:color/white"/>

</LinearLayout>
