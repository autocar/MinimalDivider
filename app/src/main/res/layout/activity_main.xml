<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:minimaldivider="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="space.darkowlzz.sectiondividerview.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>

    <space.darkowlzz.minimaldivider.MinimalDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        minimaldivider:dividerLine_color="#F48024"
        minimaldivider:topText_enabled="true"
        minimaldivider:bottomText_enabled="true"
        minimaldivider:topText_value="I am above the divider"
        minimaldivider:bottomText_value="I am below the divider"
        minimaldivider:dividerLine_width="100dp"
        minimaldivider:dividerLine_height="10dp"
        minimaldivider:dividerLine_marginTop="30dp"
        minimaldivider:dividerLine_marginBottom="30dp"/>

    <space.darkowlzz.minimaldivider.MinimalDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        minimaldivider:dividerLine_color="@android:color/holo_green_dark"
        minimaldivider:topText_enabled="true"
        minimaldivider:topText_value="Yin"
        minimaldivider:bottomText_enabled="true"
        minimaldivider:bottomText_value="Yang" />
    
</LinearLayout>
